{
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "workbench.colorCustomizations": {
    "[*]": {
      "titleBar.activeForeground": "#FCF8FD",
      "editor.lineHighlightBackground": "#110f17",
      "editor.lineHighlightBorder": "#9fced11f",
      "activityBar.background": "#110f17",
      "titleBar.activeBackground": "#110f17",
      "statusBar.background": "#110f17",
      "statusBar.debuggingBackground": "#110f17",
      "titleBar.inactiveBackground": "#110f17",
      "titleBar.border": "#110f17",
      "tab.activeBorder": "#110f17",
      "editor.wordHighlightBackground": "#ffd70040",
      "editor.wordHighlightStrongBackground": "#ffd70040",
      "editor.selectionHighlightBackground": "#ffd70040"
    },
    "activityBar.background": "#471C4D",
    "titleBar.activeBackground": "#63276B",
    "titleBar.activeForeground": "#FCF8FD"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
    // Disable general format on save for JS/TS to prevent conflicts
  "editor.formatOnSave": false,
  "[javascript]": { "editor.formatOnSave": false },
  "[typescript]": { "editor.formatOnSave": false },

  // Enable ESLint to fix all auto-fixable problems (including Prettier rules) on save
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always"
  },
  "tailwindCSS.classAttributes": [
    "class",
    "className",
    "iconClassName"
  ],
  "[typescriptreact]": {
    "editor.defaultFormatter": "vscode.typescript-language-features",
    "editor.formatOnSave": false 
  },
  "i18n-ally.keystyle": "nested",
  "i18n-ally.preferredDelimiter": "_",
  "i18n-ally.localesPaths": ["src/i18n"],
  "i18n-ally.sourceLanguage": "en",
  "i18n-ally.displayLanguage": "en",
  "i18n-ally.refactor.templates": [
    {
      "source": "jsx-text",
      "template": "{t('{key}')}",
      "description": "Use for text inside JSX tags (e.g., <div>text</div>)"
    },
    {
      "source": "js-string",
      "template": "t('{key}')",
      "description": "Use for JS objects and variables (e.g., title: 'text')"
    },
    {
      "source": "html-attribute",
      "template": "{t('{key}')}",
      "description": "Use for JSX props (e.g., placeholder='text')"
    }
  ],
  "i18n-ally.usage.scanningIgnore": [
    "**/*.spec.{ts,tsx,js,jsx}",
    "**/*.test.{ts,tsx,js,jsx}",
    "**/__tests__/**"
  ],
  "i18n-ally.extract.autoDetect": true,
  "i18n-ally.extract.parsers.html": {
    "ignorePattern": ".*\\.spec\\..*" 
  },
  "i18n-ally.extract.ignored": [
    "${toUpdate}Photo"
  ],
  "vim.useSystemClipboard": true,
  "zenMode.centerLayout": false
}
